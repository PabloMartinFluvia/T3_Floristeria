import java.util.ArrayList;
import java.util.LinkedList;
import java.util.List;


 public class ArrancarContolador {
    
	
	
    public boolean isInicializado() {
    	File f = new File("C:/Users/Marcos/Desktop/program.txt");
    	//File f = new File(new InOut().readString("Introducir direcciÃ³n "););
    	return f.exists();
    }
    
    public Floristeria iniciarFloristeria(){
    	String nombre = new InOut().readString("Introducir nombre de la floristeria: ");
    	Return = new Floristeria(nombre);
    	   
    }
    
    public int mostrarMenu(){
        String mensaje = "\n"
                + "\t1) Crear floristeria.\n"
                + "\t0) SALIR.\n";        
        InOut io = new InOut();
        io.writeln(mensaje); 
        
        boolean ok =false;
        int opcion;
        do {
            opcion = io.readInt("Selecciona Opcion: ");
            if(opcion>=0 && opcion<=9){
                ok = true;
            }else{
                io.writeln("Debe ser entre 0 i 1");
            }            
        }while(!ok);
        return opcion;
        
    }

    
}
